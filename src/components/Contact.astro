---
import contentData from '../data/content.json';
const { contact } = contentData;

// Icon SVGs (kept static)
const icons = {
  facebook: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>`,
  tiktok: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/></svg>`
};
---

<section id="contact" class="py-20 px-6 bg-[var(--color-dark)]">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Section header -->
    <div class="mb-12">
      <span class="inline-block px-4 py-1 text-sm tracking-widest uppercase text-[var(--color-secondary)] border border-[var(--color-secondary)]/30 rounded-full mb-4">
        {contact.badge}
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4" style="font-family: var(--font-serif);">
        {contact.title}
      </h2>
      <p class="text-gray-400 max-w-xl mx-auto">
        {contact.description}
      </p>
    </div>

    <!-- Social links -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      {contact.socialLinks.map((link) => {
        const iconKey = link.name.toLowerCase().includes('tiktok') ? 'tiktok' : 'facebook';
        return (
          <a 
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-3 px-6 py-4 bg-white/10 hover:bg-white/20 rounded-full transition-all duration-300 hover:-translate-y-1"
          >
            <span class="text-white" set:html={icons[iconKey]} />
            <span class="text-white font-medium">{link.name}</span>
            <svg class="w-4 h-4 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        );
      })}
    </div>
  </div>
</section>
