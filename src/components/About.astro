---
import contentData from '../data/content.json';
const { about } = contentData;

// Icon SVGs (kept static as they're not text content)
const icons = {
  book: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"></path></svg>`,
  palette: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42"></path></svg>`,
  chat: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z"></path></svg>`,
  truck: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12"></path></svg>`
};

const iconKeys = ['book', 'palette', 'chat', 'truck'];
---

<section id="about" class="py-20 px-6 bg-gradient-to-b from-white to-rose-50/30">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1 text-sm tracking-widest uppercase text-[var(--color-primary)] border border-[var(--color-primary)]/30 rounded-full mb-4">
        {about.badge}
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-dark)]" style="font-family: var(--font-serif);">
        {about.title}
      </h2>
    </div>

    <!-- Features grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {about.features.map((feature, index) => (
        <div class="text-center p-6 rounded-2xl bg-white shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="inline-flex items-center justify-center w-16 h-16 mb-4 rounded-full bg-rose-50 text-[var(--color-primary)]" set:html={icons[iconKeys[index]]} />
          <h3 class="font-semibold text-lg mb-2 text-[var(--color-dark)]" style="font-family: var(--font-serif);">
            {feature.title}
          </h3>
          <p class="text-sm text-gray-600">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
    </div>
  </div>
</section>
